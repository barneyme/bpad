{
  "name": "bEdit - browser Editor",
  "short_name": "bEdit",
  "description": "Browser based plaintext editor",
  "start_url": "./",
  "display": "standalone",
  "background_color": "#eaf3fb",
  "theme_color": "#2980b9",
  "icons": [
    {
      "src": "./bedit192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "./bedit512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "name": "Text File",
      "accept": {
        "text/plain": [".txt"]
      },
      "icons": [
        {
          "src": "./bedit192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "action": "/",
      "name": "Markdown File",
      "accept": {
        "text/markdown": [".md"]
      },
      "icons": [
        {
          "src": "./bedit192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "action": "/",
      "name": "HTML File",
      "accept": {
        "text/html": [".html", ".htm"]
      },
      "icons": [
        {
          "src": "./bedit192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "action": "/",
      "name": "CSS File",
      "accept": {
        "text/css": [".css"]
      },
      "icons": [
        {
          "src": "./bedit192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "action": "/",
      "name": "JavaScript File",
      "accept": {
        "text/javascript": [".js"]
      },
      "icons": [
        {
          "src": "./bedit192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ]
}
